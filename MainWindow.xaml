<Window x:Class="Tema2_AdivinarNumero.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema2_AdivinarNumero"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!-- es un comentario. -->
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Adivina el número entre 0 y 100:" Margin="0,0,0,10"/>
            <TextBox x:Name="guessTextBox" Width="100" Margin="0,0,0,10"/>
            <Button Content="Comprobar" Click="CheckButton_Click" Width="80" Margin="0,0,0,5"/>
            <Button Content="Reiniciar" Click="ResetButton_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
